<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="false">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.gkiratbajwa.www.iitdcomplaintapp.SignupActivity">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="20pt"
            android:text="SIGN UP"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:id="@+id/signup_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"/>


        <TextView
            android:id="@+id/signup_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:text="Name: "
            android:layout_below="@+id/signup_title"
            android:paddingTop="25dp"
            android:paddingLeft="5dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signup_editText_name"
            android:layout_toRightOf="@id/signup_name"
            android:layout_below="@id/signup_title"
            android:layout_toEndOf="@id/signup_name"
            android:paddingTop="7pt"
            android:textSize="10pt"/>

        <TextView
            android:id="@+id/signup_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:text="Type: "
            android:layout_below="@+id/signup_name"
            android:paddingTop="25dp"
            android:paddingLeft="5dp"
            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_type"
            android:layout_below="@+id/signup_name"
            android:layout_toRightOf="@id/signup_type"
            android:paddingTop="15dp"
            android:paddingLeft="10dp"
            android:spinnerMode="dropdown"/>

        <TextView
            android:id="@+id/signup_hostel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:text="Hostel: "
            android:layout_below="@+id/spinner_type"
            android:paddingTop="25dp"
            android:paddingLeft="5dp"
            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_hostel"
            android:layout_below="@id/spinner_type"
            android:layout_toRightOf="@id/signup_hostel"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:spinnerMode="dropdown"/>

        <TextView
            android:id="@+id/signup_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:text="Username: "
            android:layout_below="@id/spinner_hostel"
            android:paddingTop="25dp"
            android:paddingLeft="5dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signup_editText_username"
            android:layout_toRightOf="@id/signup_name"
            android:layout_below="@id/spinner_hostel"
            android:layout_toEndOf="@id/signup_username"
            android:paddingTop="7pt"
            android:textSize="10pt"/>

        <TextView
            android:id="@+id/signup_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:text="Password: "
            android:layout_below="@id/signup_username"
            android:paddingTop="25dp"
            android:paddingLeft="5dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signup_editText_password"
            android:layout_toRightOf="@id/signup_password"
            android:layout_below="@id/signup_username"
            android:layout_toEndOf="@id/signup_password"
            android:inputType="textPassword"
            android:ems="10"
            android:paddingTop="7pt"
            android:textSize="10pt"/>

        <Button
            android:id="@+id/signup_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:onClick="submit"
            android:background="#3F81B5"
            android:layout_below="@+id/signup_editText_password"
            android:layout_alignRight="@+id/signup_editText_password"
            android:layout_alignEnd="@+id/signup_editText_password" />

    </RelativeLayout>

</ScrollView>